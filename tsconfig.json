{
  "compilerOptions": {
    "target": "ES2016",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "typeRoots": [
      "./types"
    ],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true
  }
}